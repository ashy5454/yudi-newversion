rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Only allow admins (docId = their email) to read the admin doc
    match /admin/{docId} {
      allow read,write: if request.auth != null
                  && lower(request.auth.token.email) == lower(docId);

    }

    // Everything else is blocked unless explicitly opened
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
